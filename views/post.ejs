<%-include("partials/_header.ejs")-%>

<body>

  <%-include("partials/_navigation.ejs")-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <!-- <h2 class="subheading">Problems look mighty small from 150 miles up</h2> -->
            <!-- <span class="meta">Posted by
              <a href="#">Kubilay Uysal</a>
              on February 10, 2024</span> -->
            <span class="meta">Posted by
              <a href="#">Kubilay Uysal</a> on 
              <% const date = new Date(post.dateCreated); %>
              <% const month = date.toLocaleString('en-GB', { month: 'long' }); %>
              <%= month; %>
              <%= date.getDay(); %>,
              <%= date.getFullYear(); %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.detail %></p>
          <div class="d-flex justify-content-around">
            <a href="/posts/edit/<%= post.id %>" class="action-button update-button">Update Post</a>
            <a href="/posts/delete/<%= post.id %>?_method=DELETE" class="action-button delete-button" onclick="return confirm('Sure you wanna delete the post?')">Delete Post</a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%-include("partials/_footer.ejs")-%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
